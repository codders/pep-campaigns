- unless @campaign.applicant_introduction_text.blank?
  .introduction= simple_format(@campaign.applicant_introduction_text)

= semantic_form_for([ @campaign, @application ]) do |f|
  = f.semantic_errors

  %h2 Angaben zur Person
  = render partial: "contacts/form", locals: { form: f }

  %h2 Organisation
  = f.inputs do
    = f.input :name, label: "Name der Organisation"

  %h2 Fragen
  = render :partial => 'shared/questions', :locals => { form: f }

  = f.actions do
    = f.submit "Jetzt bewerben"
