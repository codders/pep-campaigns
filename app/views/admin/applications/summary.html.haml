= render 'subnavigation'

%h1= t('summaries.headline') % @summary.application.contact.name

- @summary.applicant_questions.each do |question, answer|
  .q-a
    .question= question
    .answer= answer

- @summary.application_questions.each do |question, answer|
  .q-a
    .question= question
    .answer= answer

%section
  %h1= t('summaries.references.headline') % @summary.number_of_references

  - @summary.reference_questions.each do |question, summary_type, answers, all_answers|
    %h2= question
    = render partial: "summaries/#{summary_type}", locals: { answers: answers, all_answers: all_answers, internal: true }

%p.other= t('summaries.references.other')
