%h1= "Antrag von #{@application.contact.name} bearbeiten"

= semantic_form_for([ :admin, @application ]) do |f|
  = f.semantic_errors

  %h2 Angaben zur Person
  = render partial: 'contacts/form',    locals: { form: f }
  = render partial: 'shared/questions', locals: { form: f, answers: :applicant_answers }

  - if @application.application_answers.any?
    %h2 Fragen
    = render partial: 'shared/questions', locals: { form: f, answers: :application_answers }

  = f.actions do
    = f.submit "Speichern"
