  = f.inputs do
    = f.input :for, as: :select, collection: { 'Antrag' => 'application', 'Referenzen' => 'reference'}, include_blank: false
    = f.input :type, as: :select, collection: Question.types, include_blank: false
    = f.input :options, hint: 'nur f√ºr "Auswahl"; kommagetrennte Werte'
    = f.input :position
    = f.input :required
    = f.input :text

  = f.actions do
    = f.action :submit, as: :button, label: 'Fragen anlegen'

