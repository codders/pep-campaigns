= form.semantic_fields_for :contact do |contact|
  = contact.input :title, label: 'Anrede'
  = contact.input :first_name, label: "Vorname"
  = contact.input :last_name, label: "Nachname"
  = contact.input :organisation, label: "Organization"
  = contact.input :email, label: "E-Mail Adresse"
  = contact.input :website, label: "Webseite"
  = contact.input :street_name, label: "Straße"
  = contact.input :house_number, label: "Hausnummer"
  = contact.input :birthdate, label: "Geburtsdatum"
  = contact.input :sex, type: 'radio', collection: ['m', 'f'], label: "Geschlecht"
  = contact.input :nationality, label: "Nationalität" 
